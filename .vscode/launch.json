{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "log": true,
            "stopOnEntry": true,
            "pathMappings": {
                "/myBills": "C:\\xampp\\htdocs\\myBills"
            },
            "xdebugSettings": {
                "max_children": 128,
                "max_data": 512,
                "show_hidden": 1
            }
        }
    ]
}
